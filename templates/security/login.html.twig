{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block main %}
<main class="login">
<h1>Se connecter</h1>
    <form method="post" class="form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_security_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="form-row">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="inputEmail"  autocomplete="email" required autofocus>
        </div>
        <div class="form-row">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>


        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <input type="submit" value="Se connecter" class="btn">
        <a href="">Mot de passe oublié ?</a>
        <div class="line"></div>
        <a href="">Pas encore de comtpe ? Se créer un compte</a>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
    </form>
</main>
{% endblock %}
