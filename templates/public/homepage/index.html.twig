{% extends 'base.html.twig' %}

{% block title %}USMV Badminton - Accueil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>
{% endblock %}

{% block main %}

    <h1>Bienvenue à l'USMV Badminton</h1>

    <section class="news">
        <h2>À la une</h2>
        <div class="carousel swiper mySwiper">
            <div class="swiper-wrapper">
                {% for article in articles %}
                    <div class="card swiper-slide">
                            <a href="{{ path("app_homepage_displayArticle", {"id": article.id}) }}">
                                <div class="card-title">
                                    <h3>{{article.title}}</h3>
                                </div>
                                <img src="{{article.urlImageMain}}" alt="">
                            </a>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-pagination"></div>
        </div>
        <div class="btn-container">
            <a class="btn btn-level2" href="{{ path("app_homepage_displayAllArticles") }}">Voir tous les articles</a>
        </div>
    </section>

    <section class="facebook-extract">

    </section>

    <section class="events-extract">
        <h2>Calendrier</h2>
        <div class="cards">
            {% for event in events %}
                <a href="#" class="card">
                {% set trans_day_hash = { 
                    "Monday": "Lun", 
                    "Tuesday": "Mar", 
                    "Wednesday": "Mer", 
                    "Thursday": "Jeu", 
                    "Friday": "Ven", 
                    "Saturday": "Sam", 
                    "Sunday": "Dim" 
                    } 
                %}
                    <div class="card-date">
                        <span>{{ trans_day_hash[event.startDate|date("l")] }}</span>
                        <span>{{ event.startDate|date("d/m/y") }}</span>
                    </div>
                    <p class="card-description">
                        <span>{{ event.content }}</span>
                    </p>
                </a>
            {% endfor %}
        </div>
        <div class="btn-container">
            <a href="{{ path("app_homepage_listEvents") }}" class="btn btn-level2">Voir plus</a>
        </div>
    </section>


    <section class="contact-form"></section>

{% endblock %}

{% block js %}
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script>
      var swiper = new Swiper(".mySwiper", {
        effect: "cards",
        grabCursor: true,
        loop: true,
        // autoplay: {
        //   delay: 2000,
        //     disableOnInteraction: false,
        // },
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },
      });
    </script>
{% endblock %}